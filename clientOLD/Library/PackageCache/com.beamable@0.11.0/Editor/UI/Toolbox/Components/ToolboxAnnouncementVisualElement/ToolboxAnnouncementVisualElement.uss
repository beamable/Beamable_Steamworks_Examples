#main{
    flex-direction: row;
}

#texts {
    flex-direction: column;
    flex-shrink: 1;
}

#title Label {
    padding-left: 0px;
    padding-right: 0px;
    margin-left: 0px;
    margin-right: 0px;
    -unity-font-style: bold;
}

#desc {
    margin-bottom: 4px;
}
#desc Button,
#desc Label {
    padding-left: 0px;
    padding-right: 0px;
    padding-top: 0px;
    padding-bottom: 0px;
    margin-left: 0px;
    margin-right: 0px;
    margin-top: 0px;
    margin-bottom: 0px;
    border-bottom-width: 0px;
    border-top-width: 0px;
}
#desc > VisualElement {
    flex-direction: row;
    align-items: center;
    flex-wrap: wrap;
}
#desc Button {
    background-image: none;
    color: #FFFFFF;
    -unity-font-style: bold;

    /*display: inline;*/
    /*flex-shrink: 1;*/
}

#buttons {
    flex-direction: row-reverse;
    flex-grow: 1;
    flex-shrink: 0;
    align-items: center
;
}
#action {

}

ToolboxAnnouncementVisualElement.danger {
    background-color: rgba(255, 134, 134, .3);
}
ToolboxAnnouncementVisualElement.danger #icon {
    background-image: resource("Packages/com.beamable/Editor/UI/Common/Icons/Warning.png");
}

ToolboxAnnouncementVisualElement.info {
    background-color: rgba(134, 255, 134, .2);
}
ToolboxAnnouncementVisualElement.info #icon {
    background-image: resource("Packages/com.beamable/Editor/UI/Common/Icons/Checked.png");
}

ToolboxAnnouncementVisualElement.warning {
    background-color: rgba(255, 255, 134, .2);
}
ToolboxAnnouncementVisualElement.warning #icon {
    background-image: resource("Packages/com.beamable/Editor/UI/Common/Icons/Warning.png");
}


#icon {
    width: 50px;
    height: 50px;
    align-self: center;
    flex-shrink: 0;
}